<h1>New Event</h1>


<%= form_tag(events_url, method: 'post') do %>


  <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id %>
  </div>

    <div>
    <%= label_tag :company_id %><br />
    <%= number_field_tag :company_id %>
  </div>

    <div>
    <%= label_tag :event_name %><br />
    <%= text_field_tag :event_name %>
  </div>

    <div>
    <%= label_tag :event_date %><br />
    <%= date_select_tag :event_date %>
  </div>

    <div>
    <%= label_tag :event_description %><br />
    <%= text_area_tag :event_description %>
  </div>

  
  <div>
    <%= submit_tag "Create Event" %>
  </div>
<% end %>
